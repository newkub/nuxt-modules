{
  "name": "nuxt-modules",
  "version": "0.1.0",
  "description": "Collection of Nuxt modules",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.23",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "clean": "turbo clean && rm -rf node_modules",
    "release": "turbo release",
    "update:deps": "bunx taze -r -w"
  },
  "workspaces": [
    "modules",
    "examples"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@nuxt/kit": "^4.1.2",
    "@types/bun": "^1.2.23",
    "@types/node": "24.6.2",
    "release-it": "^19.0.5",
    "tsdown": "^0.15.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  }
}
